<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlcMMSystemadmin" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pry2</item>
        <item name="colorPrimaryVariant">@color/pry2</item>
        <item name="colorOnPrimary">@color/green11</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black2</item>
        <item name="colorSecondaryVariant">@color/black5</item>
        <item name="colorOnSecondary">@color/black1</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppActionBar</item>

    </style>

    <style name="AppActionBar" parent="@style/ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/black2</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="elevation">0dp</item>
        <item name="windowActionBarOverlay">@null</item>
        <item name="android:actionButtonStyle">@style/menuIconStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="menuIconStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/spacing_large</item>
    </style>

    <style name="regularB">
        <item name="android:fontFamily">@font/mukta_regular</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="mediumMukta">
        <item name="android:fontFamily">@font/mukta_bold</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="mediumRoboto">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/black2</item>
        <item name="android:textSize">@dimen/font_regular</item>
    </style>


    <style name="CircleImage">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ChipProfile" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStrokeColor">@color/pry10</item>
        <item name="chipBackgroundColor">@color/green11</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/pry2</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="buttonOutline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="strokeColor">@color/pry2</item>
        <item name="textOutlineColor">@color/pry2</item>
        <item name="fontFamily">@font/mukta_regular</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>


</resources>